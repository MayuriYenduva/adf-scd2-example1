{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "ls_adlsgen2",
						"type": "LinkedServiceReference"
					},
					"name": "source1"
				},
				{
					"linkedService": {
						"referenceName": "ls_adlsgen2",
						"type": "LinkedServiceReference"
					},
					"name": "Refdata"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "insertrows"
				}
			],
			"scriptLines": [
				"parameters{",
				"     dfp_sourcecontainer as string (\"global\"),",
				"     dfp_sourcefolder as string (\"raw/cust/2022/01/20\"),",
				"     dfp_sinkcontainer as string (\"global\"),",
				"     dfp_sinkfolder as string (\"working/cust\")",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     fileSystem: ($dfp_sourcecontainer),",
				"     folderPath: ($dfp_sourcefolder),",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true) ~> source1",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     fileSystem: ($dfp_sinkcontainer),",
				"     folderPath: ($dfp_sinkfolder),",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true) ~> Refdata",
				"Refdata split(ERROR_FUNCTION(''),",
				"     disjoint: true) ~> insertrows@(Insertrow, )"
			]
		}
	}
}